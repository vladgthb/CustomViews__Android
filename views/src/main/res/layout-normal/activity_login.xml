<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_activity_top_view"
    tools:context="com.vladimirdanielyan.customviews.activities.FullScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login_area"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:id="@+id/logo_image_view"
            android:background="@color/transparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_text_view"
            android:textSize="28sp"
            android:layout_marginTop="32dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="32dp"
        android:id="@+id/login_area"
        android:orientation="vertical">

        <com.vladimirdanielyan.customviews.views.EditTextViewWithIcon
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:hint="@string/default_hint_row_1"
            app:textType="textEmailAddress"
            android:id="@+id/user_name_edit_text"
            app:image="@drawable/images__user_icon"/>

        <com.vladimirdanielyan.customviews.views.EditTextViewWithIcon
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:hint="@string/default_hint_row_2"
            app:textType="textPassword"
            android:id="@+id/user_password_edit_text"
            app:image="@drawable/images__lock_icon"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:id="@+id/login_button_view"
            android:text="@string/button_default_text"
            android:onClick="authUser"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_view_default_text"
            android:id="@+id/forgot_password_text_view"
            android:textAlignment="center"
            android:onClick="requestNewPassword"/>

    </LinearLayout>

</RelativeLayout>
